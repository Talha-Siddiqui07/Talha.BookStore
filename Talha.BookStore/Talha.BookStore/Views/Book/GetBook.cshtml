@model BookModel
@{
	ViewData["Title"] = Model.Title + " Book Detail";
}


<div class="container">
    <h1>Book Detail:</h1>

    <div class="row">

        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/books/book1.png?auto=yes" class="d-block w-100" alt="book1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/books/book2.png?auto=yes" class="d-block w-100" alt="book2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/books/book3.png?auto=yes" class="d-block w-100" alt="book3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="col-md-6">

            <div class="container">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Title</h3>
                        <p class="text-primary mb-1">By: @Model.Author </p>
                        <p class="card-text">
                           @Model.Description
                        </p>
                        <a href="#" class="btn btn-outline-primary">Read now</a>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Category:</strong> @Model.category </li>
                            <li class="list-group-item"><strong>Total pages:</strong> @Model.totalpages </li>
                            <li class="list-group-item"><strong>Language:</strong> @Model.language </li>
                        </ul>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <hr />

    <div class="py-5 bg-light" id="similar">
        <h2>Similar Books</h2>
        <div class="row">

            @for (var i = 0; i < 5; i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Book.Title</h5>
                            <p class="card-text">Book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="#" class="btn btn-primary btn-outline-dark">View Details</a>
                                </div>
                                <small class="text-muted">Book.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


